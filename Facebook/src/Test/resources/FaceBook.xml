<!DOCTYPE suite SYSTEM "https://testng/testng-1.0.dtd">
<suite name="Facebook Automation Scipt" parallel="false">
    <parameter name="os" value="OS X"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="65.0"/>
    <parameter name="url" value="https://www.facebook.com/"/>
    <test name = "smoke TestingFacebook">
        <classes>
            <class name="SignupTests"/>
            <class name="WatchPageTests"/>
            <class name="MarketPlacePageTests"/>
